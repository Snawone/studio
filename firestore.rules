rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow full read/write access to any authenticated user for all collections
    match /onus/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /shelves/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /users/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /technical-groups/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

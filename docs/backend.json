
{
  "entities": {
    "Onu": {
      "title": "Onu",
      "type": "object",
      "description": "Represents an Optical Network Unit (ONU) or Set-Top Box (STB).",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the device, typically the serial number."
        },
        "type": {
          "type": "string",
          "enum": ["onu", "stb"],
          "description": "The type of the device."
        },
        "shelfId": {
          "type": "string",
          "description": "The ID of the shelf where the device is located."
        },
        "shelfName": {
          "type": "string",
          "description": "Denormalized name of the shelf for easier querying and display."
        },
        "addedDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date the device was added to the inventory."
        },
        "removedDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date the device was removed from the inventory."
        },
        "status": {
          "type": "string",
          "enum": [
            "active",
            "removed"
          ],
          "description": "The current status of the device."
        },
        "history": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "action": {
                "type": "string",
                "enum": [
                  "added",
                  "removed",
                  "restored",
                  "created"
                ]
              },
              "date": {
                "type": "string",
                "format": "date-time"
              },
              "source": {
                "type": "string",
                "enum": [
                  "manual"
                ]
              },
              "userId": {
                "type": "string",
                "description": "The ID of the user who performed the action."
              },
              "userName": {
                "type": "string",
                "description": "The name of the user who performed the action."
              }
            }
          }
        }
      },
      "required": [
        "id",
        "type",
        "shelfId",
        "shelfName",
        "status",
        "addedDate"
      ]
    },
    "Shelf": {
      "title": "Shelf",
      "description": "Represents a physical shelf that holds ONUs or STBs.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The unique name or identifier for the shelf (e.g., A1-RACK1)."
        },
        "capacity": {
          "type": "number",
          "description": "The maximum number of devices this shelf can hold."
        },
        "type": {
          "type": "string",
          "enum": ["onu", "stb"],
          "description": "The type of device this shelf is intended for."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date the shelf was created."
        },
        "itemCount": {
          "type": "number",
          "description": "The current number of devices on the shelf."
        }
      },
      "required": [
        "name",
        "capacity",
        "type",
        "createdAt",
        "itemCount"
      ]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores public information about a user.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "searchList": {
          "type": "array",
          "description": "A list of ONU IDs that the user is currently searching for.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "email"
      ]
    },
    "Technician": {
      "title": "Technician",
      "description": "Represents a technician assigned to a group.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user profile."
        },
        "userName": {
          "type": "string",
          "description": "Denormalized name of the user for display purposes."
        },
        "addedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date the technician was added to the group."
        }
      },
      "required": [
        "userId",
        "userName",
        "addedAt"
      ]
    },
    "TechnicalGroup": {
      "title": "Technical Group",
      "description": "Represents a group of technicians.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the technical group."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date the group was created."
        },
        "technicians": {
          "type": "array",
          "description": "A list of technicians in this group.",
          "items": {
            "$ref": "#/entities/Technician"
          }
        }
      },
      "required": [
        "name",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "email-password"
    ],
    "customClaims": {
      "isAdmin": {
        "type": "boolean"
      }
    }
  },
  "firestore": {
    "structure": [
      {
        "path": "onus/{onuId}",
        "definition": {
          "entityName": "Onu",
          "schema": {
            "$ref": "#/entities/Onu"
          },
          "description": "Global collection of all ONUs and STBs.",
          "params": [
            {
              "name": "onuId",
              "description": "The unique identifier of the device."
            }
          ]
        }
      },
      {
        "path": "shelves/{shelfId}",
        "definition": {
          "entityName": "Shelf",
          "schema": {
            "$ref": "#/entities/Shelf"
          },
          "description": "Collection of all physical shelves.",
          "params": [
            {
              "name": "shelfId",
              "description": "The unique identifier of the shelf."
            }
          ]
        }
      },
      {
        "path": "users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/entities/UserProfile"
          },
          "description": "Stores user profile information.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier of the user."
            }
          ]
        }
      },
      {
        "path": "technical-groups/{groupId}",
        "definition": {
          "entityName": "TechnicalGroup",
          "schema": {
            "$ref": "#/entities/TechnicalGroup"
          },
          "description": "Collection of all technical groups.",
          "params": [
            {
              "name": "groupId",
              "description": "The unique identifier of the group."
            }
          ]
        }
      }
    ]
  }
}
